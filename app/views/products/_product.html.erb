<article>
  <%= link_to product_path(product) do %>
    <% if product.image_available? %>
      <%= image_tag product.image.thumb.url , alt: product.name %>
    <% else %>
      <div>no image</div>
    <% end %>
    <h1>
      <span><%= product.name %></span>
      <span><%= humanized_money_with_symbol product.price %></span>
    </h1>
  <% end%>
  <div>
    <% if product.quantity == 0 %>
      <button class="btn btn-danger bg-danger" disabled >Sold Out</button>
      <%= button_to add_item_cart_path(product_id: product.id), disabled: true, class: 'btn' ,
         method: :post do %>
        <%= fa_icon "shopping-cart", text: 'Add' %>
      <% end %>
    <% else %>
      <%= button_to add_item_cart_path(product_id: product.id), class: 'btn' ,
         method: :post do %>
        <%= fa_icon "shopping-cart", text: 'Add' %>
      <% end %>
    <% end %>
  </div>
</article>
