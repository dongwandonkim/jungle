<tr>
  <td>
    <% if product.image_available? %>
      <%= image_tag product.image.tiny.url %>
    <% else %>
      <div>no image</div>
    <% end %>
  </td>
  <td>
    <h4><%= product.name %></h4>
    <br>
    <p><%= product.description %></p>
  </td>
  <td>
   <div>$<%= product.price %></div>
  </td>
  <td>
    <div>
    <%= button_to remove_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-danger' do %> - <% end %>
    <%= quantity %>
    <%= button_to add_item_cart_path(product_id: product.id), class: 'btn btn-xs btn-success' do %> + <% end %>
    </div>
  </td>
  <td>
   <div>$<%= product.price * quantity %></div>
  </td>
</tr>
